pipeline {
    agent any

    stages {
        stage ('terraform init'){

            steps {
                sh 'terraform init'
            }
        }
        stage  ("terraform apply") {
            environment { 
                AWS_ACCESS_KEY_ID = credentials('ACCESS_KEY') 
                AWS_SECRET_ACCESS_KEY = credentials('SECRET_KEY') 
            }
            steps {
                sh 'terraform apply -auto-approve'
            }
        }
    }
#     post {
#         always {
#             sh 'rm -rf *'
#         }
  
#     }
}